doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  block scripts
  block styles
  link(rel='stylesheet' href='/public/styles/layout.css')
  <!-- Link to Google API to use Montserrat font family -->
  link(rel="preconnect" href="https://fonts.googleapis.com")
  link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
  link(href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet")
  <!--:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900-->
  <!-- Link for Font Awesome icons -->
  script(src='https://kit.fontawesome.com/08ea1250e9.js' crossorigin='anonymous')
  title Workout Tracker
body
    header
        a.logo(href='/')
            i.fa-solid.fa-dumbbell.fa-2xl
                span JS Tracker
        .login-container.fa-solid(style="display: flex;")
            if !username
                a(href='/user/login' value='login') Login / Signup
            else
                p#username Hi, #{username}
                hr
                a(href='/user/logout' value='logout') Logout
                    i.fa-solid.fa-right-from-bracket
    block content

    footer