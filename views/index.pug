extends layout.pug

block scripts
    script(src='/public/javascripts/form-logic.js' defer='')
    script(src='/public/javascripts/workout-render.js' defer='')
    
block styles
    link(rel='stylesheet' href='/public/styles/index.css')

block content
    section#main-section
        .form-container
            form#exercise-form.form(action='/' method='POST')
                .input-container
                    label(for='workout-input') Workout date:
                    input#workout-input(type='date' name='date' required='true' value=date)
                .input-container
                    label(for='exercise-input') Exercise:
                    input#exercise-input(type='text' name='exercise_name' required='true' value=exercise_name)
                textarea#exercise-comment-input(name='exercise_comment' placeholder='Exercise comments (e.g. technique used, rest time)')
                .input-container
                    label(for='weight-input') Weight used:
                    input#weight-input(type='number' name='set_weight' min='0' step='0.01' value=set_weight)
                    select(name='set_weight_unit')
                        option(value='kg' selected=kg) kg
                        option(value='lbs' selected=lbs) lbs
                .input-container
                    label(for='reps-input') Repetitions:
                    input#reps-input(type='number' name='set_reps' min='0' value=set_reps)
                #superset-check.input-container
                    label(for='superset-input') Superset?
                    input#superset-input(type='checkbox' name='superset' checked=superset)
                    .superset-input-container.input-container(style='visibility: hidden; display: none')
                        label(for='superset-exercise-input') Exercise:
                        input(type='text' name='superset_exercise' id='superset-exercise-input' value=superset_exercise)
                    .superset-input-container.input-container(style='visibility: hidden; display: none')
                        label(for='superset-weight-input') Weight used:
                        input(type='number' name='superset_weight' id='superset-weight-input' min='0' step='0.01' value=superset_weight)
                        select(name='superset_weight_unit')
                            option(value='kg' selected=sskg) kg
                            option(value='lbs' selected=sslbs) lbs
                    .superset-input-container.input-container(style='visibility: hidden; display: none')
                        label(for='superset-reps-input') Repetitions:
                        input(type='number' name='superset_reps' id='superset-reps-input' min='0' value=superset_reps)
                textarea#set-comment-input(name='set_comment' placeholder='Set comments (e.g. reps in reserve)')
                button#submit-button(type='submit') Submit
        .workout-container
            .workout-title
                h1#workout-name Workout for:
                input#display-date(type='date' value=date)